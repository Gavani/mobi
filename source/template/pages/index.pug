block content 
  .x-body.x-landing
    main.main(role="main")
      include ../parts/header
      section.hero
        .container-lg
          .hero__bg
            .hero__logo 
              h1 AXILinteriors
            form.hero__form(action="")
              .hero__form-serch
                label.hero__form-serch-label
                  input(type="text" placeholder="Găsiți orice...").hero__form-search-input
                  span.hero__form-search-icon
                    <i class="fas fa-search"></i>
      section.x-landing__navigation
        .container
          ul.x-landing__navigation-list
            each item in nav
              li(class=`x-landing__navigation-item x-landing__navigation-item-${item.class}`)
                a.x-landing__navigation-link(href=`${item.href}`)
                  div.x-landing__navigation-img
                    img.x-landing__navigation-pic(src=`${item.src}`)
                  div.x-landing__navigation-text= item.text
      section.x-landing__whyus#hello
        .container-lg
          .whyus__bg
            h2.whyus__text De ce noi ?
            ul.whyus__opportunities-list
              li.whyus__opportunities-item
                .whyus__opportunities-icon
                  <i class="fas fa-shipping-fast whyus__opportunities-icon-car"></i>
                .whyus__opportunities-text
                  p Livrare rapidă
                .whyus__opportunities-desc
                  p Livrarare rapidă in orice colț al țării
              li.whyus__opportunities-item
                .whyus__opportunities-icon
                  <i class="fas fa-hand-holding-usd whyus__opportunities-icon-bounce"></i>
                .whyus__opportunities-text
                  p Prețuri decente
                .whyus__opportunities-desc
                  p Găsim soluție pentru orice client
              li.whyus__opportunities-item
                .whyus__opportunities-icon
                  <i class="fas fa-couch whyus__opportunities-icon-bounce"></i>
                .whyus__opportunities-text
                  p Modele noi
                .whyus__opportunities-desc
                  p Mergem în pas cu timpul și oferim cele mai bune modele pentru comfortul dumneavoastră
              li.whyus__opportunities-item
                .whyus__opportunities-icon
                  <i class="fas fa-check whyus__opportunities-icon-pulse"></i>
                .whyus__opportunities-text
                  p Calitate superioară
                .whyus__opportunities-desc
                  p Lorem ipsum dolor sit amet consectetur adipisicing elit.
      section.x-landing-counter
        .container-lg
          .counter__container
            .counter__text
              h2 Design-uri realizate
            .counter__icon  
              <i class="fas fa-pencil-alt"></i>
